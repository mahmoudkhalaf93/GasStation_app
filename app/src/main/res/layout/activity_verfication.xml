<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_main"
    tools:context=".VerficationActivity">

    <TextView
        android:id="@+id/welcomever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Welcome"
        android:textSize="28sp"
        android:textColor="@color/light_blue_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/verfication_code"
        android:layout_width="355dp"
        android:layout_height="49dp"
        android:background="@drawable/shape"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Verfication Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomever" />

    <Button
        android:layout_marginTop="32dp"
        android:text="Reset Password"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:onClick="ResetPassword"
        android:background="@drawable/solid"
        android:textColor="#17212A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verfication_code" />

</androidx.constraintlayout.widget.ConstraintLayout>