<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/shape"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/comnt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Mahmoud khalaf"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/light_main"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/comnt_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:isIndicator="true"

        android:numStars="5"
        android:scaleX=".6"
        android:scaleY=".6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comnt_name" />

    <TextView
        android:id="@+id/comnt_detlis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Detials : TextViedsadsadasdsasdasdadasdasdasdasdasdasw"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comnt_rating_bar"
        android:paddingBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>